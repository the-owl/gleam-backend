{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["reflect-metadata"]
  },
  "include": [
    "src/**/*"
  ]
}
